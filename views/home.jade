extends layout

block body
	input(type="hidden" id="quoteId" value="#{id}")
	div(class="container-fluid quote")
		div.row
			h1.header Vad SD Sagt:
			div(class="body col-md-12")
				i(class="quoteMark fa fa-quote-left fa-5x")
				
				div(class="quoteText")
					p #{quote}

				div(class="container-fluid")
					div.row
						div(class="col-md-4")
							img(style='background-image: url("/resources/images/persons/#{person['image']}"); background-position: center center;' class='person')
						div(class="col-md-8 person")
							p
								i(class="fa fa-angle-double-right")
								|  #{person['name']}, #{person['position']}
					div.row
						div(class="col-md-12 comment")
							| #{comment}


		div.row
			div(class="col-md-12 footer")
				div.share
					span(id="facebookShareOpen" data-url="http://#{domain}/#{id}" class="fakeLink facebookShare")
						i(class="shareIcon fa fa-facebook fa-2x")
					span(id="twitterShareOpen" data-text="#{quote}" data-id="#{id}" class="fakeLink twitterShare")
						i(class="shareIcon fa fa-twitter fa-2x")
					span(id="permLinkOpen" data-url="http://vadsdsagt.se/#{id}" class="fakeLink urlShare")
						i(class="shareIcon fa fa-link fa-2x")	
				div.info
					span.date #{quoteDate}
					span.source
						| KÃ¤lla:  
						if sourceIsLink
							a(href="#{source}" target="_blank")
								| #{sourceParts['host']}
						else
							| #{source}
						// a(href="https://twitter.com/kentekeroth/status/674320508184305664", target="_blank") https://twitter.com/kentekeroth/status/674320508184305664

	div.nextQuote
		b Vad har SD sagt mer?
		br
		a(href="/#{id}/prev" class="btn btn-primary" id="prevButton")
			i(class="fa fa-arrow-circle-left")
		a(href="/", class="btn btn-primary") Slumpa
		a(href="/#{id}/next" class="btn btn-primary" id="nextButton")
			i(class="fa fa-arrow-circle-right")